<div class="row d-flex justify-content-center">
    <div id="form-update"  class="col-md-5">
        <h2>Update Post</h2>
        <form action="/arts/<%= art['id']%>" method="post" enctype="multipart/form-data">
            <input type="hidden" name="_method" value="put">

            <div class="form-floating mb-3">
                <input name="name" type="text" class="form-control" id="floatingInput" value="<%= art['name'] %>" >
                <label for="floatingInput">Art name</label>
            </div>
            <div class="mb-3">
                <label for="formFile" class="form-label">Upload image</label>
                <input name="image" class="form-control" type="file" id="formFile">
            </div>

            <button class="btn-form">update</button>
        </form>
    </div>
</div>


