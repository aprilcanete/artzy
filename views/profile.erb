
<div class="gallery-container">
    <h3>Your Gallery</h3>
    <div class="container">
        <div class="row">
            <% arts.each do |art| %>
                <div class="col">
                    <img src="<%= art["image_url"] %>" alt="<%= art["name"] %>" class="art-img">
                    <p>
                        <a href="/arts/<%= art["id"] %>"><%= art["name"] %></a>
                    </p>
                </div>
            <% end %> 
        </div>
    </div>
</div>
